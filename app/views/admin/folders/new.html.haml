- content_for :head do
  %script{:type => "text/javascript"} 
    Event.observe(window, "load", function() {
    Event.observe($("folder_name"),"blur",function() {
    if (tinyMCE.activeEditor.getContent() == "") tinyMCE.activeEditor.setContent("<h1>" + $("folder_name").value + "</h1>");
    })
    Event.observe($("test"),"click",function() {
    tinyMCE.activeEditor.updateContent("<p>test</p>");
    })
    });

- content_for :meta_title do
  Make a new folder

%h1
  = yield :meta_title
- form_for :folder, :url => admin_folders_path, :html => { :onsubmit => "form_submitted();" } do |f|
  = render :partial => "form", :locals => { :f => f }
